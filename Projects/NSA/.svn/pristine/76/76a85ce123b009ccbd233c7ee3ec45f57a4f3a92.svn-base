<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context="nexrise.publication.in.nexrise.Attendence.LeaveStatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin5">
        <TextView
            android:text="Leave status"
            android:layout_width="0dp"
            android:layout_height="@dimen/height50"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding12"
            android:textAllCaps="true"
            android:id="@+id/studentname"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_help"
            android:layout_width="0dp"
            android:layout_height="@dimen/height20"
            android:id="@+id/help"/>
    </LinearLayout>


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/overlayColor"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding15"
        android:paddingLeft="@dimen/padding15"
        android:id="@+id/attendance_percentage"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/common_text_size"
        android:gravity="left"
        android:text="Attendance Percentage : 70%"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:gravity="left"
        android:textColor="@color/colorGray"
        android:paddingLeft="@dimen/padding30"
        android:paddingBottom="@dimen/padding10"
        android:textSize="@dimen/description_text_size"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/overlayForegroundColor"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No of days present : 45/288"
        android:id = "@+id/days_present"
        android:textSize="@dimen/common_text_size"
        android:textColor="@color/colorBlack"
        android:padding="@dimen/padding15"
        android:gravity="left"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:background="@color/overlayForegroundColor"/>
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/absent_names"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No of days absent : 15"
            android:padding="@dimen/padding15"
            android:id="@+id/days_absent"
            android:textColor="@color/colorBlack"
            android:layout_weight="1.5"
            android:textSize="@dimen/common_text_size"/>
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/height20" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:background="@color/overlayForegroundColor"/>
</LinearLayout>

</LinearLayout>
