<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/overlayForegroundColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/overlayForegroundColor"
            android:weightSum="2">
            <TextView
                android:text="schedules"
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin12"
                android:textAllCaps="true"
                android:id="@+id/details"
                android:paddingTop="@dimen/margin5"
                android:textStyle="bold"
                android:layout_weight="1.5"
                android:background="@color/overlayForegroundColor"
                android:paddingBottom="@dimen/margin5"
                android:textSize="@dimen/common_text_size" />
            <ImageView
                android:layout_weight="0.5"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_help"
                android:id="@+id/help"
                android:layout_width="0dp"
                android:layout_height="@dimen/height20" />

        </LinearLayout>

        <android.support.v7.widget.CardView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/cardElevation1"
            android:layout_marginLeft="@dimen/margin5"
            android:layout_marginRight="@dimen/margin5"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/layoutBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="top"
                android:background="@color/layoutBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/student_info"
                    android:orientation="horizontal"
                    android:layout_weight="3">
                    <ImageView
                        android:layout_width="@dimen/width3"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:background="@color/svgLayoutIconColor"
                        />
                    <ImageView
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_time_table"
                        android:tint="@color/svgLayoutIconColor"
                        android:layout_toRightOf="@+id/message_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/icon_fragment"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="2"
                        android:paddingLeft="@dimen/height10">
                    <TextView
                        android:id="@+id/name_my"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height30"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:text="Arnab Mukerje"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/common_text_size"/>
                        <TextView
                            android:id="@+id/info_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height30"
                            android:layout_weight="1.0"
                            android:gravity="center_vertical"
                            android:text="Arnab Mukerjee"
                            android:textColor="@color/timeTextColor"
                            android:textSize="@dimen/common_text_size"/>

                    </LinearLayout>
                    <ImageView
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_arrow_right"
                        android:layout_toRightOf="@+id/message_to"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>