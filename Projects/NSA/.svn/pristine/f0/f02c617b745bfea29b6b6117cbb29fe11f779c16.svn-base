<div class="panel panel-flat">
    <div class="table-responsive">
        <table class="table table-xlg text-nowrap">
            <tbody>
            <tr>
                <td class="col-md-3" align="center">
                    <div class="media-left media-middle">
                        <i class="text-success fa fa-calendar fa-2x"></i>
                    </div>

                    <div class="media-left">
                        <h6 class="text-semibold no-margin">Today's Classes</h6>
                        <h6 class="no-margin text-success text-left">{{timetable}}</h6>
                    </div>
                </td>
                <td class="col-md-3" align="center">
                    <div class="media-left media-middle">
                        <i class="text-warning-300 fa fa-pencil fa-2x"></i>
                    </div>

                    <div class="media-left">
                        <h6 class="text-semibold no-margin">Homework Created</h6>
                        <h6 class="no-margin text-warning-300 text-left">{{homework}}</h6>
                    </div>
                </td>
                <td class="col-md-3" align="center">
                    <div class="media-left media-middle">
                        <i class="text-primary-400 fa fa-file-text-o fa-2x"></i>
                    </div>

                    <div class="media-left">
                        <h6 class="text-semibold no-margin">Notes Uploaded </h6>
                        <h6 class="no-margin text-primary-400 text-left">{{notes}}</h6>
                    </div>
                </td>
                <td class="col-md-3" align="center">
                    <div class="media-left media-middle">
                        <i class="fa fa-clock-o text-pink-400 fa-2x"></i>
                    </div>

                    <div class="media-left">
                        <h6 class="text-semibold no-margin">Remaining Leaves</h6>
                        <h6 class="no-margin text-pink-400 text-left">{{totalRemLeavs}}</h6>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>