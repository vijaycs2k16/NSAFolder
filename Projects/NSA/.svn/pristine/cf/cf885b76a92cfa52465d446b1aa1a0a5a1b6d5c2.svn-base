<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="nexrise.publication.in.nexrise.ParentFeatures.HomeworkFeature.ParentCommentActivity">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlayForegroundColor">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:divider="@color/transparent"
            android:id="@+id/student_comment_listview"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/overlayColor"
        android:layout_alignParentStart="true">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height50"
            android:inputType="textMultiLine"
            android:hint="Enter comments"
            android:textSize="@dimen/common_text_size"
            android:paddingLeft="@dimen/margin10"
            android:id="@+id/enter_comments"
            android:textColor="@color/colorBlack"
            android:layout_toLeftOf="@+id/send_btn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/send_btn" />

        <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_btn"
            android:layout_gravity="right"
            android:textColor="@color/colorWhite"
            android:background="@drawable/actionbar_tablayout_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
