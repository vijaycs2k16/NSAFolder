<div id="addSyllabus" class="overlay-popup footer-popup" style="display: none;">
    <!-- RIGHT PANEL STARTS -->
    <div class="cd-panel">
        <div class="cd-panel-header">
            <!-- <div class="hidden-xs simple-field-hf"></div> -->
            <div class="simple-field-hf">
            </div>
            <a (click)="closeOverlay($event)" class="cd-panel-close">Close</a>
        </div>
        <div class="cd-panel-container">
            <input type="hidden" id="existingFiles" (click)="getExistingFiles($event)">
            <div class="cd-panel-content" id="side-panel-container">
                <form class="form-horizontal form-validate" [formGroup]="SyllabusForm">
                    <div class="modal-body">
                        <div class="form-group editClass">
                            <label class="control-label col-sm-4">Class &nbsp;<span class="text-danger">*</span></label>
                            <div class="col-md-8 multi-select-full">
                                <select #classSelect class="select-class" multiple="multiple">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Syllabus Name &nbsp;<span class="text-danger">*</span></label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" formControlName="name">
                                <div control-messages class="validation-error-label" [control]="SyllabusForm.controls.name"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Description </label>
                            <div class="col-md-8">
                                <textarea type="text" class="form-control" formControlName="description"></textarea>
                            </div>
                        </div>
                        <div class="row form-horizontal">
                        <div class="form-group" *ngIf="!edit" >
                            <label class="col-md-3 control-label">Attachments &nbsp;<span class="text-danger">*</span></label>
                            <div class="col-md-3" style="left: 70px;">
                                <div class="uploader bg-info" ><input type="file" class="file-styled" name="multiple" ng2FileSelect [uploader]="uploader" multiple><span class="filename" style="user-select: none;">Select File to Upload</span><span class="action" style="user-select: none;"><i class="icon-plus2"></i></span></div>
                                <span class="help-block">No.of Files Selected: {{ uploader?.queue?.length }}<ng-container *ngIf="attachments && attachments.length > 0"><span class="text-pink-700">&nbsp;||&nbsp;</span><a id="viewAttachment" class="blink-text" (click)="viewAttachment()">view attachments</a></ng-container></span>
                            </div>

                            <label class="control-label col-md-2" style="left: 65px;">Channels
                            </label>
                            <div class="col-md-4" formGroupName="notify">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="row">
                                            <div class="col-md-3 sms">
                                                <div class="form-group">
                                                    <label class="checkbox-inline" style="font-size:12px;">
                                                        <input  #sms type="checkbox">SMS
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-3 email hide">
                                                <div class="form-group">
                                                    <label class="checkbox-inline" style="font-size:12px;">
                                                        <input #email type="checkbox" class="emailChecked">Email
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-3 push">
                                                <div class="form-group">
                                                    <label class="checkbox-inline" style="font-size:12px;">
                                                        <input #push type="checkbox">App
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                            </div>

                            <div class="col-md-12" *ngIf="!edit">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th width="30%">Name</th>
                                        <th>Size</th>
                                        <th width="15%">Progress</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr *ngFor="let item of uploader.queue">
                                        <td class="fc-title">{{ item.file.name }}</td>
                                        <td nowrap>{{ item.file.size/1024/1024 | number:'.2' }} MB</td>
                                        <td>
                                            <div class="progress progress-xxs" style="margin-bottom: 0;">
                                                <div class="progress-bar progress-bar-success" role="progressbar" [ngStyle]="{ 'width': item.progress + '%' }"></div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span *ngIf="item.isSuccess"><i class="glyphicon glyphicon-ok text-success"></i></span>
                                            <span *ngIf="item.isError"><i class="glyphicon glyphicon-remove text-danger"></i></span>
                                        </td>
                                        <td>
                                            <!--<a class="icon-upload4 text-success" (click)="item.upload()" [ngClass]="{'disabled': item.isReady || item.isUploading || item.isSuccess}"></a>-->
                                            <a class="fa fa-trash-o fa-lg text-danger" (click)="item.remove()"></a>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                                <hr/>
                                <div>
                                    <div class="content-group-sm">
                                        <p class="text-semibold">Uploading Status</p>
                                        <div class="progress progress-xxs">
                                            <div class="progress-bar progress-bar-success"  [ngClass]="{'active progress-bar-striped': uploader.progress != 100}" role="progressbar" [ngStyle]="{ 'width': uploader.progress + '%' }"></div>
                                        </div>
                                        <span [ngClass]="{'text-success-800':uploader.progress > 0,'blink-text': uploader.progress == 100}">{{uploader.progress + '% Completed'}}</span>
                                    </div>
                                </div>
                            </div>
                            <!--<label class="control-label col-md-2">Channels
                            </label>
                            <div class="col-md-4" formGroupName="notify">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <div class="row">
                                            <div class="col-md-3 sms">
                                                <div class="form-group">
                                                    <label class="checkbox-inline" style="font-size:12px;">
                                                        <input  #sms type="checkbox">SMS
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-3 email hide">
                                                <div class="form-group">
                                                    <label class="checkbox-inline" style="font-size:12px;">
                                                        <input #email type="checkbox" class="emailChecked">Email
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-3 push">
                                                <div class="form-group">
                                                    <label class="checkbox-inline" style="font-size:12px;">
                                                        <input #push type="checkbox">App
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>-->
                        </div>
                    <div class="overlay-footer">
                        <div class="right-align overlay-footer-content-rt">
                            <button type="button" class="btn btn-default" (click)="closeOverlay($event)">Close</button>
                            <button *ngIf="editClass" type="button" id="saveSyllabus" (click)="save($event)" [disabled]="!uploader.getNotUploadedItems().length || !SyllabusForm.valid" class="btn btn-primary btn-ladda btn-ladda-spinner" data-style="expand-right" data-spinner-size="20"><span class="ladda-label">Save</span></button>
                            <button *ngIf="!editClass" type="button" id="updateSyllabus" (click)="update($event)" class="btn btn-primary btn-ladda btn-ladda-spinner" data-style="expand-right" data-spinner-size="20"><span class="ladda-label">Update</span></button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- cd-panel-container -->
        </div>
    </div>
    <!-- right panel script -->
</div>