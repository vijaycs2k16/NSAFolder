<div id="schoolSubject" class="overlay-popup footer-popup" style="">
    <!-- RIGHT PANEL STARTS -->
    <div class="cd-panel">
        <div class="cd-panel-header">
            <!-- <div class="hidden-xs simple-field-hf"></div> -->
            <div class="simple-field-hf">
            </div>
            <a (click)="closeOverlay($event)" class="cd-panel-close">Close</a>
        </div>
        <div class="cd-panel-container">
            <div class="cd-panel-content" id="side-panel-container">
                <form class="form-horizontal form-validate" [formGroup]="schoolSubjectForm">
                    <div class="modal-body controls">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Department Name <span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <select #single id="select-dept" class="form-control">

                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Subject Name&nbsp;<span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" id="subject" formControlName="subName" type="text" placeholder="Enter Subject Name" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Subject Code&nbsp;<span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <input class="form-control" formControlName="subCode" id="code" type="text" placeholder="Enter Code" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Subject Aspects
                            </label>
                            <div class="col-sm-8">
                                <div class="multi-select-full">
                                    <select #selectAll class="form-control multiselect-Aspects" multiple="multiple">
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Status&nbsp;<span class="text-danger">*</span>
                            </label>
                            <div class="col-sm-8">
                                <select #single1 id="select-status1" name="select" class="form-control">

                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Subject Description
                            </label>
                            <div class="col-sm-8">
                              <textarea ng-trim="false" [maxlength]="160" id="templateName" rows="3" cols="3"
                                        class="form-control" (keydown)="keyDown()"
                                        formControlName="subDesc"></textarea>
                                <span class="text-danger">Characters limit : 160</span>&nbsp; &nbsp; &nbsp; &nbsp;
                                <span> Characters Left : {{ charsLeft }}/160 </span>
                            </div>
                        </div>
                    </div>
                    <div class="overlay-footer">
                        <div class="right-align overlay-footer-content-rt">
                            <button type="button" class="btn btn-sm btn-default" (click)="closeOverlay($event)">Close</button>
                            <button type="submit" [disabled]="!schoolSubjectForm.valid" id="saveSubject" (click)="saveSubject('saveSubject')" class="btn btn-primary">{{btnVal}}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- cd-panel-container -->
    </div>
</div>



