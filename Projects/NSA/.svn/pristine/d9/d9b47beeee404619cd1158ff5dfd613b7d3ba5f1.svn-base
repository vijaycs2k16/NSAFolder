<div id="popup-holder">
    <div class="popup"></div>
</div>

<%  var isBaned = profile.profileName === 'baned';
var imgUrl;
var name;

if (!imageSrc && relatedEmployee) {
imgUrl = relatedEmployee.imageSrc;
name = relatedEmployee.name ? relatedEmployee.name.first + ' ' + relatedEmployee.name.last : '';
}

name = name || login || 'Nick';
imgUrl = imageSrc || imgUrl || 'http://cdn.slidesharecdn.com/profile-photo-johndoewho-48x48.jpg';
%>

<div id="topbar-holder" class="topbarHolder <%= isBaned ? 'banned' : '' %>">
    <div class="left-section">
        <div id="logo" class="topbarLogo">
            <a href="javascript:;" style="margin-left: -30px;" class="mainLogo">NexSchoolApp<span></span></a>
            <div class="sidebarToggler">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <div class="center-section text-center">
        <div id="logo" class="topbarLogo topbarHeader">
            <span  class="mainLogo text-captialize"><%=profile.profileName%><span></span></span>
        </div>
    </div>

    <div class="right-section">
        
        <!--<div id="guide" class="guide">
            <a href="javascript:;" class="btn blue slim guideBtn"> Guide </a>
        </div>-->

        <div id="userSnap" class="user-snap"></div>

        <div class="loginPanel" id="loginPanel">
            <div class="dropdownButton">
                <img src="<%= imgUrl %>"
                     alt="logo"
                     class="iconEmployee"/>
                <span id="userName" class="userName"><%= name %></span>

                <ul class="loginList">
                    <% if(!isBaned) {%>
                    <li id="userpage"><a href="#erp/myProfile">My profile</a></li>
                    <%};%>
                    <!--<li id="clearDemoData"><a href="javascript:;">Clear Demo Data</a></li>-->
                    <li id="logout"><a href="/logout">Logout</a></li>
                </ul>
            </div>
        </div>
        <!--
            <a href="#erp/integrations" class="btn right integrationBtn">Integrations</a>
        -->
    </div>
</div>

<div id="submenuHolder" class="sideMenu preventActions">
    <nav class="sideNavigation"></nav>
</div>

<div class="content_wrapper">
    <div id="top-bar" class="top-bar"></div>
    <div id="content-holder" class="content-holder "> <!-- need add class 'withGuideTour' for view dashboard-->
        <% if (isBaned) {%>
        <div id='banned'>
            <div class='icon-banned'></div>
            <div class='text-banned'>
                <h1>Sorry, this user is banned!</h1>
                <p>Please contact the administrator.</p>
            </div>
        </div>
        <%};%>
    </div>
</div>
