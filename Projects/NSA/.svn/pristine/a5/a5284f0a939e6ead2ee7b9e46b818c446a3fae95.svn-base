<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_exam_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/overlayForegroundColor"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:id="@+id/class_name"
        android:textSize="@dimen/headings"
        android:padding="@dimen/margin5"
        android:text="class 8 A"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exam_table_layout"
        android:layout_below="@id/relative"
        android:background="@drawable/border_table_style"
        android:layout_marginTop="@dimen/margin5">
        <TableRow
            android:minHeight="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DATE"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="SUBJECT"/>

            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="SESSION"/>

            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="PORTIONS"/>
        </TableRow>

        <!-- TODO: Update blank fragment layout -->
        <ListView
            android:id="@+id/examSubjectView"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/border"/>

    </TableLayout>

</LinearLayout>