<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="nexrise.publication.in.nexrise.UploadActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/upload_activity_linear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:id="@+id/monthlyname1"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:paddingLeft="@dimen/padding15"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:layout_weight="2.5"
                android:background="@drawable/border"/>
            <ImageButton
                android:layout_width="@dimen/width10"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:id="@+id/image7"
                android:padding="@dimen/padding15"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/margin3"
                android:layout_marginRight="@dimen/margin3"

                style="@style/FlatCornerButton"
                android:tint="@color/colorWhite"
                app:srcCompat="@android:drawable/ic_input_add"/>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin10"
            android:background="@color/colorWhite"
            android:weightSum="3">
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_clip"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/padding15"
                android:text="Attachment"
                android:layout_weight="2.5"
                android:background="@color/colorWhite"
                android:id="@+id/textView60" />


        </LinearLayout>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:id="@+id/upload_button"
    style="@style/FlatCornerButton"
    android:text="UPLOAD"/>

    </LinearLayout>

</ScrollView>
</LinearLayout>
