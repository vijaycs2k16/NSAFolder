<div class="form-holder _newForm">
    <form method="post" action="" id="invoiceForm" style="height: 410px; overflow: auto">
        <h4 class="_dialogMainTitle">Add Chapter</h4>
        <div >
            <div class="_formWrap _enlargedItemMargin">
                <div class="_formBlock _equal">
                    <div class="_animateSelectBox _withInfo">
                        <span class="_selectTitle">Title</span>
                        <div class="_newSelectListWrap">
                            <a id="title"
                               name="title"
                               class="current-selected"
                               data-id=""
                               href="javascript:;">Select Title</a>
                        </div>
                    </div>
                    <div class="_animateSelectBox _withInfo">
                        <span class="_selectTitle">Subject</span>
                        <div class="_newSelectListWrap">
                            <a id="subject"
                               name="subject"
                               class="current-selected"
                               data-id=""
                               href="javascript:;">Select Subject</a>
                        </div>
                    </div>
                    <div class="_animateSelectBox _withInfo">
                        <span class="_selectTitle">Classes</span>
                        <div class="_newSelectListWrap">
                            <a id="Class_st"
                               name="Class_st"
                               class="current-selected"
                               data-id=""
                               href="javascript:;">Select Class</a>
                        </div>
                    </div>
                    <span class="text-grey">Please add atleast one topic</span><span class="text-danger">*</span>
                    <br/><br/>
                    <div id="productItemsHolder"></div>
            </div>
        </div>
    </form>
</div>