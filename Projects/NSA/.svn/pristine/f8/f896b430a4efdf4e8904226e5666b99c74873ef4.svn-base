        android:gravity="center_vertical"
        android:text="@string/holiday"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="@dimen/height35"
        android:layout_marginTop="@dimen/margin10"
        android:layout_weight="1"
        >


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_more_menu"
            android:background="#dfdcdc"
            android:id="@+id/holidayGridButton"
            />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_grid_layout"
            android:id="@+id/holidayListButton"
            android:background="#dfdcdc"
            android:layout_marginLeft="@dimen/margin3"
            />
    </LinearLayout>
