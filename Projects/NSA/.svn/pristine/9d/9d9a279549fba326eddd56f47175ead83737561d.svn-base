<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/overlayForegroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:id="@+id/class_section"
        android:text="class"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/common_text_size"
        android:paddingLeft="@dimen/padding10"
        android:textAllCaps="true"/>
    <include layout="@layout/progress_bar"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <TextView
            android:background="@drawable/border_overlay"
            android:textSize="@dimen/description_text_size"
            android:id="@+id/date"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height50"
            android:text="@string/date_caps"/>

        <TextView
            android:background="@drawable/border_overlay"
            android:textSize="@dimen/description_text_size"
            android:id="@+id/day"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height50"
            android:textAllCaps="true"
            android:text="@string/day"/>

        <TextView
            android:background="@drawable/border_overlay"
            android:textSize="@dimen/description_text_size"
            android:id="@+id/time"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height50"
            android:textAllCaps="true"
            android:text="@string/time"/>
        <TextView
            android:background="@drawable/border_overlay"
            android:textSize="@dimen/description_text_size"
            android:id="@+id/subject"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height50"
            android:textAllCaps="true"
            android:text="@string/subject" />

        <TextView
            android:background="@drawable/border_overlay"
            android:textSize="@dimen/description_text_size"
            android:id="@+id/max_marks"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_weight="0.7"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height50"
            android:text="@string/max_marks" />
    </LinearLayout>

    <ListView
        android:id="@+id/exam_details"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/border"/>
</LinearLayout>
