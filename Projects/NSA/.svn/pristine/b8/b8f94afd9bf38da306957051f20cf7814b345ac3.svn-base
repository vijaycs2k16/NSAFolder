<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_album"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="nexrise.publication.in.nexrise.Gallery.CreateAlbumActivity">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/uploadclick">

        <TextView
            android:id="@+id/upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:padding="@dimen/padding15"
            android:text="upload Video"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/common_text_size" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center_vertical"
            android:padding="@dimen/padding15"
            android:hint="Videos"
            android:id="@+id/create_video"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"
            android:layout_toRightOf="@+id/message_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <VideoView
        android:layout_width="@dimen/width100"
        android:layout_height="@dimen/height100"
        android:layout_marginLeft="@dimen/margin15"
        android:id="@+id/video"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding15"
            android:text="Video Name :"
            android:id="@+id/albumname"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/common_text_size"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding15"
            android:hint="Type Here"
            android:textSize="@dimen/common_text_size"
            android:id="@+id/video_album_name"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding15"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/common_text_size"
            android:text="Where was these taken?"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding15"
            android:hint="Type Here"
            android:id="@+id/content"
            android:textSize="@dimen/common_text_size"
            android:textColor="@color/colorBlack"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:id="@+id/categoriestext"
            android:textSize="@dimen/common_text_size"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/padding15"
            android:layout_weight="1"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/height30"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/margin5"
            android:background="@drawable/spinner"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:id="@+id/albumspin">

        </Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/dateclick">
        <TextView
            android:layout_width="@dimen/width116"
            android:layout_height="wrap_content"
            android:text="Publishing Date"
            android:id="@+id/publishdate"
            android:layout_weight="1.5"
            android:textSize="@dimen/common_text_size"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/padding15"/>
        <TextView
            android:text="hai"
            android:layout_width="@dimen/width50"
            android:layout_height="@dimen/height30"
            android:gravity="center_vertical|left"
            android:background="@drawable/border"
            android:id="@+id/publishdatedatetext"
            android:paddingLeft="@dimen/padding5"
            android:textSize="@dimen/description_text_size"
            android:textColor="@color/colorGray"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="@dimen/image_btn_size"
            android:layout_height="@dimen/image_btn_size"
            android:id="@+id/fromdatebutton"
            app:srcCompat="@drawable/ic_events"
            android:background="@color/colorWhite"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/sharewithclick">

        <TextView
            android:id="@+id/message_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:gravity="center_vertical"
            android:padding="@dimen/padding15"
            android:text="Share With"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"
            android:layout_toRightOf="@+id/message_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
