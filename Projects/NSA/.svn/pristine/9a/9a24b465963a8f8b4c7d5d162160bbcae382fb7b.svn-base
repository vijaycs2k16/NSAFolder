<div id="addScholarship" class="overlay-popup footer-popup" style="display: none;">
    <!-- RIGHT PANEL STARTS -->
    <div class="cd-panel">
        <div class="cd-panel-header">
            <!-- <div class="hidden-xs simple-field-hf"></div> -->
            <div class="simple-field-hf">
            </div>
            <a (click)="closeOverlay($event)" class="cd-panel-close">Close</a>
        </div>
        <div class="cd-panel-container" id="hiflame-cart-popup">
            <div class="cd-panel-content" id="side-panel-container">
                <form class="form-horizontal"  [formGroup]="scholarshipForm">
                    <div class="modal-body">
                        <fieldset class="">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">Scholarship Name&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" formControlName="name">
                                            <div control-messages class="validation-error-label" [control]="scholarshipForm.controls.name"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                            </div>
                            <div class="row">
                                <div class ="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">Valid Upto&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="icon-calendar3"></i></span>
                                                    <input #dueDate formControlName="validUpto" type="text" class="form-control pickadate-disable-past" placeholder="End Date&hellip;">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">Amount&nbsp;<span class="text-danger">*</span></label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" formControlName="amount" placeholder="Enter amount&hellip;" (keydown)="validateAmount($event, 'true')">
                                            <div control-messages class="validation-error-label" [control]="scholarshipForm.controls.amount"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="control-label col-md-4">Description
                                        </label>
                                        <div class="col-md-8">
                                            <textarea rows="3" cols="5" class="form-control" placeholder=""  formControlName="scholarshipDesc"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="overlay-footer">
                        <div class="right-align overlay-footer-content-rt">
                            <button type="button" class="btn btn-default" (click)="closeOverlay($event)">Close</button>
                            <button type="submit" [disabled]="!scholarshipForm.valid" id="save" (click)="saveScholarship('save')" class="btn btn-primary btn-ladda btn-ladda-spinner" data-style="expand-right" data-spinner-size="20"><span class="ladda-label">{{btnVal}}</span></button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- cd-panel-container -->
        </div>
    </div>
    <!-- right panel script -->
</div>


