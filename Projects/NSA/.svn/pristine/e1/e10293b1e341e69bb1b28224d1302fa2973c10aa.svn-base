<div class="panel panel-default">
    <div class="panel-heading">
        <h6 class="panel-title"><span class="text-semibold text-uppercase"><i class="icon-calendar3 position-left"></i>My Leaves </span></h6>
        <div class="heading-elements">
            <input  *ngIf="enable" type="button" value="Apply Leave" data-size="50%" data-title="Apply Leave" data-toggle="from-right" data-id="#applyLeave" class="btn btn-sm btn-primary" (click)="applyLeave($event)"/>
        </div>
    </div>
    <input type="hidden" id="render" (click)="render()" value="">
    <div class="panel-body">
        <div class="content">
            <div class="row ">
                <div class="col-md-8">
                    <div class="panel-body">
                        <ext-calendar></ext-calendar>
                    </div>
                </div>
                <div class="col-md-4">
                    <!-- Basic layout-->
                    <div class="panel panel-flat">
                        <form action="#" class="form-horizontal">
                            <div class="panel-default">
                                <div class="panel-heading">
                                    <h6 class="panel-title"><span class=""><i class="icon-calendar52"></i> Remaining Leaves</span></h6>
                                </div>
                                <div class="panel-body event-panel">
                                    <div class="" *ngIf="remLeaves != 0">
                                        <div class="form-group" *ngFor="let remLeave of remLeaves">
                                            <div class="col-lg-6 col-xs-6">
                                                {{remLeave.leaveTypeName}}
                                            </div>
                                            <!-- <label class="col-lg-3 control-label">Name:</label> -->
                                            <div class="events col-xs-6">
                                                {{remLeave.remainingLeaves}} days
                                            </div>
                                        </div>
                                    </div>
                                    <div *ngIf="remLeaves ==0" style="height: 100px;">
                                        <span class="text-center event-panel-show">
                                        <strong>No Data Found</strong></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- Basic layout-->
                        <!-- /basic layout -->
                        <!-- /basic layout -->
                    </div>
                    <br/>
                    <div class="panel panel-flat">
                        <form action="#" class="form-horizontal ">
                            <div class="panel-default">
                                <div class="panel-heading">
                                    <h6 class="panel-title"><span class=""><i class="icon-calendar52"></i> Leaves Taken</span></h6>
                                </div>
                                <div class="panel-body event-panel">
                                    <div class="" *ngIf="approvedLeaves != 0">
                                        <div class="form-group" *ngFor="let approvedLeave of approvedLeaves">
                                            <div class="col-lg-6 col-xs-6">
                                                {{approvedLeave.fromDate}} - {{approvedLeave.toDate}}
                                            </div>
                                            <!-- <label class="col-lg-3 control-label">Name:</label> -->
                                            <div class="events col-xs-6">
                                                {{approvedLeave.leavesCount}} days
                                            </div>
                                        </div>
                                    </div>
                                    <div *ngIf="approvedLeaves ==0" style="height: 100px;">
                                        <span class="text-center event-panel-show">
                                        <strong>No Data Found</strong></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <br/>
                    <div class="panel panel-flat">
                        <form action="#" class="form-horizontal">
                            <div class="panel-default">
                                <div class="panel-heading">
                                    <h6 class="panel-title"><span class=""><i class="icon-calendar52"></i> Applied Leaves</span></h6>
                                </div>
                                <div class="panel-body event-panel">
                                    <div  *ngIf="appliedLeaves != 0">
                                        <div class="form-group" *ngFor="let appliedLeave of appliedLeaves">
                                            <div class="col-lg-8 col-xs-8">
                                                {{appliedLeave.fromDate}} - {{appliedLeave.toDate}}
                                            </div>
                                            <!-- <label class="col-lg-3 control-label">Name:</label> -->
                                            <div class="events col-xs-4">
                                                <span *ngIf="appliedLeave.status == 'Approved'" class="label label-success">{{appliedLeave.status}}</span>
                                                <span *ngIf="appliedLeave.status == 'Pending'">
                                                    <a class='icon-primary' class="text-center" data-size="50%" data-title="Edit Apply Leave" data-toggle="from-right" data-id="#applyLeave" (click)="getLeaveDetails(appliedLeave, $event)"><i class='fa fa-pencil-square-o fa-lg'></i></a></span>
                                                <span *ngIf="appliedLeave.status == 'Cancelled'" class="label label-danger">{{appliedLeave.status}}</span>
                                                <span *ngIf="appliedLeave.status == 'Deny'" >
                                                    <label class="label label-danger" style="cursor: pointer;">Denied</label>&nbsp;&nbsp;&nbsp;<a (click)="openModal(appliedLeave)"><i class="icon-info22"></i></a>
                                                    </span>

                                            </div>
                                        </div>
                                    </div>
                                    <div *ngIf="appliedLeaves ==0" style="height: 100px;">
                                    <span class="text-center event-panel-show">
                                    <strong>No Data Found</strong></span>
                                    </div>
                                </div>
                            </div>
                        </form>

                        <div id="denyReasons" class="modal fade refuse">
                            <div class="modal-dialog modal-sm ">
                                <div class="modal-content">
                                    <div class="modal-header bg-info">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h5 class="modal-title">Reason For Denial</h5>
                                    </div>
                                    <form action="#" class="form-horizontal" [formGroup]="denialForm">
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label class="control-label col-md-4">Reason
                                                </label>
                                                <div class="col-md-8">
                                                    <textarea rows="3" cols="3" class="form-control" formControlName="denialDesc" placeholder="" readonly></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <hr/>
                                        <div class="modal-footer" >
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <!-- Basic layout-->
                        <!-- /basic layout -->
                        <!-- /basic layout -->
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
<apply-leave></apply-leave>