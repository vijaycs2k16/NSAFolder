<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context="nexrise.publication.in.nexrise.ExamFeature.TeacherExamListFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/attendance_history_linear">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height40"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:gravity="center"
            android:id="@+id/exam_name"
            android:textSize="@dimen/common_text_size"
            android:textAllCaps="true"
            android:text=""
            android:layout_gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="search"
            android:id="@+id/text"
            android:paddingLeft="@dimen/padding5"
            android:textColorHint="@color/colorGray"
            android:layout_margin="@dimen/margin10"
            android:background="@drawable/curveborder"
            android:drawableRight="@android:drawable/ic_menu_search"/>

    </LinearLayout>
    <include layout="@layout/progress_bar"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/attendance_history_linear"
        android:background="@color/colorWhite"
        android:id="@+id/student_list">

    </ListView>

</LinearLayout>
