<div id="addUserGroup" class="overlay-popup footer-popup" style="display: none;">
    <!-- RIGHT PANEL STARTS -->
    <div class="cd-panel">
        <div class="cd-panel-header">
            <!-- <div class="hidden-xs simple-field-hf"></div> -->
            <div class="simple-field-hf">
            </div>
            <a (click)="closeOverlay($event)" class="cd-panel-close">Close</a>
        </div>
        <div class="cd-panel-container">
            <input type="hidden" id="existingFiles" (click)="getExistingFiles($event)">
            <div class="cd-panel-content" id="side-panel-container">
                <form class="form-horizontal form-validate" [formGroup]="addUserGroupsForm" >
                    <div class="modal-body">

                        <div class="form-group">
                            <label class="col-lg-4 control-label">User Group Name&nbsp;<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control" [ngModel]="title"  placeholder="Enter Title" formControlName="name">
                            </div>
                        </div>
                        <div class="form-group" >
                            <!--<div class="input-field col s12">-->
                                <label for="student" class="col-lg-4 control-label">Add Users to Group</label>
                                <div class="col-lg-8">
                                    <!--<p-autoComplete field="suggestStudent" placeholder="Search Students" [(ngModel)]="texts" styleclass="wid100" formControlName="userGroup" [suggestions]="results" (completeMethod)="search($event)" [multiple]="true"></p-autoComplete>-->
                                    <input id="student" type="text" class="form-control dd-group" [(ngModel)]=query placeholder="Search Students and Employees" (keyup)=filter() formControlName="userGroup">
                                </div>
                            <label for="student" class="col-lg-4 control-label">(Students and Employees)</label>
                            <div class="suggestions-group"  *ngIf="filteredList.length > 0">
                                <ul *ngFor="let item of filteredList" >
                                    <li style="list-style-type: none">
                                        <a class= "dd-group" (click)="select(item)">{{item.suggestStudent}}</a>
                                    </li>
                                </ul>
                            </div>
                            <div class = "container" *ngIf="selected.length > 0">
                                <!--<input type="text" id="myInput" class="form-control" (keyup)="filterGroup($event)" placeholder="Search from group..">-->
                                <div *ngFor="let item of selected" >
                                    <div class="selected-group" >
                                        <span>{{item.suggestStudent}}</span>
                                        <a (click)="remove(item)" style="color: red;">x</a>
                                    </div>
                                </div>
                            </div>
                            <p style="margin-left: 230px; font-size: 12px;">Total Members : {{selected.length}}</p>
                        </div>

                    </div>
                    <div class="overlay-footer">
                        <div class="right-align overlay-footer-content-rt">
                            <button type="button" class="btn btn-default" (click)="closeOverlay($event)">Close</button>
                            <!--<button  type="button" id="generateTeacher" (click)="generateTeacher($event)"  class="btn btn-primary btn-ladda btn-ladda-spinner" data-style="expand-right" data-spinner-size="20"><span class="ladda-label">Generate For Teachers</span></button>-->
                            <button *ngIf="editGroup"  type="button" id="create" (click)="create($event)" class="btn btn-primary btn-ladda btn-ladda-spinner" data-style="expand-right" data-spinner-size="20"><span class="ladda-label">Save</span></button>
                            <button *ngIf="!editGroup" type="button" id="update" (click)="update($event)" class="btn btn-primary btn-ladda btn-ladda-spinner" data-style="expand-right" data-spinner-size="20"><span class="ladda-label">Update</span></button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>