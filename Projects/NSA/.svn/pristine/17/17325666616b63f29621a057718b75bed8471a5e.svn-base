<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    android:layout_marginBottom="@dimen/margin5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/layoutBackground"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:id="@+id/chatclick"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10">
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/student_id"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:paddingLeft="@dimen/padding10"
                 />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:paddingLeft="@dimen/padding10"
                android:id="@+id/student_name"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:paddingLeft="@dimen/padding15"
                android:id="@+id/classCode"
                android:textSize="@dimen/title_text_size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorBlack"
                android:paddingLeft="@dimen/padding15"
                android:id="@+id/section_name"
                android:textSize="@dimen/title_text_size"/>
            <TextView
                android:text="2.30pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/timeTextColor"
                android:textSize="@dimen/small_text_size"
                android:textStyle="italic"
                android:id="@+id/posted_time"
                android:gravity="end"
                android:layout_weight="1"
                android:paddingRight="@dimen/padding10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding5"
            android:weightSum="5">

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/descriptionTextColor"
                android:textSize="@dimen/description_text_size"
                android:layout_marginTop="@dimen/margin10"
                android:paddingLeft="@dimen/padding10"
                android:layout_weight="4"
                android:id="@+id/comments" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/comments_linear_layout"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="@dimen/width20"
                    android:layout_height="@dimen/height20"
                    android:id="@+id/comments_badge_layout"
                    android:visibility="invisible"
                    android:background="@drawable/badge_appcolor">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:text="2"
                        android:id="@+id/comments_badge_text"
                        android:textSize="@dimen/text8"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>