<div class="panel panel-default">
    <div class="panel-heading">
        <h6 class="panel-title"><span class="text-semibold text-uppercase"><i class="fa fa-sitemap position-left"></i>Departments </span><i class="icon-arrow-right15 text-pink-600"></i> <small>List of Departments </small></h6>
        <div class="heading-elements">
            <!--<button type="button" valclass="btn btn-sm btn-primary heading-btn" data-toggle="modal" data-target="#modal_full" (click)="addDepartment($event)">Add Department</button>-->
            <input *ngIf="enable" type="button" value="Add Department" data-size="50%" data-title="Add Department" data-toggle="from-right" data-id="#addDepartment" class="btn btn-sm btn-primary" (click)="addDepartment($event)"/>
            <input id="updateDepartment" type="hidden" data-size="50%"  data-toggle="from-right" data-id="#addDepartment" (click)="updateDepartment($event)"/>
        </div>
    </div>
    <div class="panel-body">
        <input type="hidden" id="deleteButton" (click)="confirmDelete($event)" />
        <input type="hidden" id="warningDep" (click)="deleteDepartment()" />
        <table class="table datatable-department">
            <thead>
            <tr>
                <th data-priority="1">Department Name</th>
                <th>Alias Name</th>
                <th>Updated By</th>
                <th data-priority="2">Action</th>

            </tr>
            </thead>
