<div id="addholidaytype" class="overlay-popup footer-popup" style="">
    <!-- RIGHT PANEL STARTS -->
    <div class="cd-panel">
        <div class="cd-panel-header">
            <!-- <div class="hidden-xs simple-field-hf"></div> -->
            <div class="simple-field-hf">
            </div>
            <a (click)="closeOverlay($event)" class="cd-panel-close">Close</a>
        </div>
        <div class="cd-panel-container">
            <div class="cd-panel-content" id="side-panel-container">
                <form class="form-horizontal form-validate" [formGroup]="addHolidaytypeForm">
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label col-md-4 margin-top5">Type Name <span class="text-danger">*</span> </label>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <input type="text" class="form-control" formControlName="holidayType" required="required">
                                    <div control-messages class="validation-error-label" [control]="addHolidaytypeForm.controls.holidayType"></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Description </label>
                            <div class="col-md-8">
                                 <textarea ng-trim="false" [maxlength]="160" id="templateName" rows="3" cols="3"
                                           class="form-control" (keydown)="keyDown()"
                                           formControlName="description"></textarea>
                                <span class="text-danger">Characters limit : 160</span>&nbsp; &nbsp; &nbsp; &nbsp;		
                                <span> Characters Left : {{ charsLeft }}/160 </span>
                            </div>
                        </div>
                    </div>
                    <div class="overlay-footer">
                        <div class="right-align overlay-footer-content-rt">
                            <button type="button" class="btn btn-sm btn-default" (click)="closeOverlay($event)">Close</button>
                            <button type="button" id="saveHolidayType" [disabled]="!addHolidaytypeForm.valid" class="btn btn-primary btn-ladda btn-ladda-progres" data-style="expand-right" data-spinner-size="20" (click)="saveHolidayType('saveHolidayType')"></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- cd-panel-container -->
    </div>
</div>
