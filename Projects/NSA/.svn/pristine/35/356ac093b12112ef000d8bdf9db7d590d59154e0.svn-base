<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="nexrise.publication.in.nexrise.Notifications.MyNotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/overlayColor">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/overlayForegroundColor"
            android:id="@+id/homework_details"
            android:weightSum="2">
            <TextView
                android:text="notices"
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding12"
                android:textAllCaps="true"
                android:id="@+id/study_value"
                android:paddingTop="@dimen/margin5"
                android:textStyle="bold"
                android:layout_weight="1.5"
                android:background="@color/overlayForegroundColor"
                android:paddingBottom="@dimen/margin5"
                android:textSize="@dimen/common_text_size" />
            <ImageView
                android:layout_weight="0.5"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_help"
                android:layout_width="0dp"
                android:id="@+id/help"
                android:layout_height="@dimen/height20" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent"
                android:background="@color/overlayForegroundColor"
                android:paddingLeft="@dimen/padding5"
                android:id="@+id/notify"
                android:paddingRight="@dimen/padding5"
                android:paddingBottom="@dimen/padding3"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floating_action_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/fab_margin"
                android:background="@color/appColor"
                app:backgroundTint="@color/appColor"
                android:tint="@color/colorWhite"
                app:elevation="@dimen/elevation4"
                app:borderWidth="0dp"
                app:srcCompat="@drawable/ic_input_add1"
                app:fabSize="auto"/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>
