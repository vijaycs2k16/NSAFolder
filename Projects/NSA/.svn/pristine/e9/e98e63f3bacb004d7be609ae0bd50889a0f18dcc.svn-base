<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_progress_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nexrise.publication.in.nexrise.ProgressReportFeature.ProgressReportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/overlayForegroundColor"
        android:weightSum="2">
        <TextView
            android:text="Results"
            android:layout_width="0dp"
            android:layout_height="@dimen/height50"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding12"
            android:textAllCaps="true"
            android:id="@+id/study_value"
            android:paddingTop="@dimen/padding5"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:background="@color/overlayForegroundColor"
            android:paddingBottom="@dimen/padding5"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_help"
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_height="20dp" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlayForegroundColor"
        android:paddingLeft="@dimen/padding5"
        android:paddingRight="@dimen/padding5"
        android:paddingTop="@dimen/padding5"
        android:paddingBottom="@dimen/padding3"
        android:id="@+id/progress_report_listview"/>

</LinearLayout>
