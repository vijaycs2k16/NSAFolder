<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="nexrise.publication.in.nexrise.EventsFeature.OurSchoolLocationFragment">

    <LinearLayout
        android:id="@+id/fragment_school_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/layoutBackground">

    <!-- TODO: Update blank fragment layout -->
   <ListView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="@dimen/padding5"
       android:paddingRight="@dimen/padding5"
       android:paddingTop="@dimen/padding5"
       android:paddingBottom="@dimen/padding3"
       android:id="@+id/school_location_listview"
       android:background="@color/overlayForegroundColor"/>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/appColor"
            android:visibility="gone"
            android:id="@+id/loading" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing to show"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorThinGrey"
            android:textSize="@dimen/description_text_size"
            android:visibility="gone"
            android:id="@+id/no_content"
            android:layout_gravity="center" />
    </RelativeLayout>
</FrameLayout>
