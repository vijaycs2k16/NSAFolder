<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/overlayColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/overlayForegroundColor"
            android:id="@+id/notification_details"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:visibility="gone"
                android:id="@+id/headingblack">
            </RelativeLayout>
            <TextView
                android:text="received notification"
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding12"
                android:textAllCaps="true"
                android:id="@+id/study_value"
                android:paddingTop="@dimen/margin5"
                android:textStyle="bold"
                android:layout_weight="1.5"
                android:paddingBottom="@dimen/margin5"
                android:textSize="@dimen/common_text_size" />
            <ImageView
                android:layout_weight="0.5"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_help"
                android:layout_width="0dp"
                android:id="@+id/help"
                android:layout_height="@dimen/height20" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/appColor"
                android:visibility="gone"
                android:id="@+id/notification_loading" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothing to show"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorThinGrey"
                android:textSize="@dimen/description_text_size"
                android:visibility="gone"
                android:id="@+id/no_content"
                android:layout_gravity="center" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent"
                android:background="@color/overlayForegroundColor"
                android:paddingLeft="@dimen/padding5"
                android:id="@+id/notify"
                android:paddingRight="@dimen/padding5"
                android:paddingBottom="@dimen/padding3"/>
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:visibility="gone"
                android:id="@+id/whiteback"
                android:gravity="center_vertical">
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    android:id="@+id/create_notification_with_text">
                    <TextView
                        android:layout_width="@dimen/width150"
                        android:layout_height="wrap_content"
                        android:text="Create Notification"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/headings"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/margin5"
                        android:layout_gravity="center" />
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:fabSize="normal"
                        android:background="@color/appColor"
                        app:backgroundTint="@color/appColor"
                        app:useCompatPadding="true"
                        android:tint="@color/colorWhite"
                        app:elevation="4dp"
                        app:srcCompat="@drawable/ic_input_add1"
                        android:id="@+id/create_notification" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:visibility="invisible"
                    android:id="@+id/my_notification_with_text">
                    <TextView
                        android:layout_width="@dimen/width150"
                        android:layout_height="wrap_content"
                        android:text="My Notifications"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/headings"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:layout_marginRight="@dimen/margin5"
                        android:layout_gravity="center" />
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        android:background="@color/appColor"
                        app:backgroundTint="@color/appColor"
                        android:tint="@color/colorWhite"
                        app:useCompatPadding="true"
                        app:srcCompat="@drawable/ic_notification_menu_selected"
                        android:id="@+id/my_notification" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/more_options">
                    <TextView
                        android:layout_width="@dimen/width150"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:gravity="right"
                        android:layout_marginRight="@dimen/margin5"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/description_text_size"
                        android:layout_gravity="center" />
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_more_oprions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/appColor"
                        app:backgroundTint="@color/appColor"
                        android:tint="@color/colorWhite"
                        app:elevation="2dp"
                        app:fabSize="normal"
                        app:srcCompat="@drawable/ic_vertical_dots"
                        app:useCompatPadding="true" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
