module.exports = (function () {
    var mongoose = require('mongoose');
    var ObjectId = mongoose.Schema.Types.ObjectId;

    var QuestionUsageSchema = new mongoose.Schema({
        question     : {type: ObjectId, ref: 'Questions', default: null},
        count        : Number,
        isUsed       : {type: Boolean, default: false},
    }, {collection: 'question_usage'});

    mongoose.model('QuestionUsage', QuestionUsageSchema);
    if (!mongoose.Schemas) {
        mongoose.Schemas = {};
    }

    mongoose.Schemas.QuestionUsage = QuestionUsageSchema;
})();
