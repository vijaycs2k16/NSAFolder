<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:minHeight="@dimen/minHeight50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/border_table"
                android:id="@+id/timings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minHeight="@dimen/height50"
                android:layout_weight="1.5"
                android:text="Second column"
                android:padding="@dimen/padding2"
                android:textSize="@dimen/common_text_size"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/subjectRow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minHeight="@dimen/height50"
                android:layout_weight="1"
                android:background="@drawable/border_style"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding1"
                android:text="Maths"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:background="@drawable/border_style"
                android:id="@+id/teacherRow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:minHeight="@dimen/height50"
                android:textSize="@dimen/common_text_size"
                android:padding="@dimen/padding1"
                android:layout_weight="1.5"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:text="Row 2"/>

            <LinearLayout
                android:layout_height="match_parent"
                android:minHeight="@dimen/height50"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:id="@+id/time_table_linear"
                android:visibility="gone"
                android:background="@drawable/border_style">

                <ImageView
                    android:layout_height="@dimen/height25"
                    android:layout_width="@dimen/width25"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin10"
                    android:id="@+id/notes_attachment"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_clip" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/width20"
                    android:layout_height="@dimen/height20"
                    android:id="@+id/badge_layout"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:background="@drawable/badge_appcolor">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:id="@+id/badge_text"
                        android:text=""
                        android:textSize="@dimen/text8"/>
                </FrameLayout>
            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>