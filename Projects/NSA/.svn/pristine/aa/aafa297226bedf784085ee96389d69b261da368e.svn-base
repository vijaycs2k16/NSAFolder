<div id="addEventVenues" class="overlay-popup footer-popup" style="display: none;">

    <!-- RIGHT PANEL STARTS -->
    <div class="cd-panel">
        <div class="cd-panel-header">
            <!-- <div class="hidden-xs simple-field-hf"></div> -->
            <div class="simple-field-hf">
            </div>
            <a (click)="closeOverlay($event)" class="cd-panel-close">Close</a>
        </div>
        <div class="cd-panel-container">
            <div class="cd-panel-content" id="side-panel-container">
                <form class="form-horizontal" [formGroup]="eventVenueForm">
                    <div class="modal-body">
                        <fieldset class="">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-sm-4">Venue Name <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="email" placeholder="" formControlName="eventVenueName">
                                        <div control-messages class="validation-error-label" [control]="eventVenueForm.controls.eventVenueName"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-sm-4">Location
                                    </label>
                                    <div class="col-sm-8">
                                        <textarea rows="5" cols="5" [maxlength]="160" class="form-control hide-scroll"  placeholder="" formControlName="location"></textarea>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                    <div class="overlay-footer">
                        <div class="right-align overlay-footer-content-rt">
                            <button type="button" class="btn btn-default" (click)="closeOverlay($event)">Close</button>
                            <button type="submit" [disabled]="!eventVenueForm.valid" (click)="saveEventVenue('save')" id="save" class="btn btn-primary btn-ladda btn-ladda-progres" data-style="expand-right" data-spinner-size="20">
                                <span class="ladda-label">{{btnVal}}</span></button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- cd-panel-container -->
        </div>
    </div>
    <!-- right panel script -->
</div>

