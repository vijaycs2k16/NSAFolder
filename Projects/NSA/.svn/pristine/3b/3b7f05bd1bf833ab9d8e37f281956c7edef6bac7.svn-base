<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/overlayForegroundColor"
    tools:context="nexrise.publication.in.nexrise.ProgressReportFeature.StudentReportTableFragment">

    <!-- TODO: Update blank fragment layout -->

    <include layout="@layout/progress_bar"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height50"
        android:id="@id/exam_name"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/padding10"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height40"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginBottom="@dimen/margin2">

        <TextView
            android:text="Subject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView23"
            android:gravity="center"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold"
            android:paddingLeft="@dimen/padding10"
            android:background="@drawable/border_style"
            android:textColor="@color/colorBlack"
            android:layout_weight="1" />

        <TextView
            android:text="Marks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView32"
            android:gravity="center"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold"
            android:paddingLeft="@dimen/padding10"
            android:layout_weight="1"
            android:background="@drawable/border_style"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin5"
        android:paddingRight="@dimen/margin5"
        android:layout_weight="1"
        android:id="@+id/student_report_table_listview"
        android:background="@color/overlayForegroundColor"/>

</LinearLayout>
