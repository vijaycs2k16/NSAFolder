<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_selected_images"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="nexrise.publication.in.nexrise.Gallery.SelectedImagesActivity">


    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="auto_fit"
        android:layout_weight="2"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:verticalSpacing="@dimen/margin5"
        android:id="@+id/selected_image_grid"
        android:horizontalSpacing="@dimen/margin10"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin10"
            android:id="@+id/add_edit_photos"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_add"
                android:tint="@color/svgLayoutIconColor"
                android:id="@+id/imageView25" />

            <TextView
                android:text="Add/edit photos"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height35"
                android:id="@+id/textView66"
                android:layout_marginLeft="@dimen/margin5"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                />
        </LinearLayout>

        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/FlatCornerButton"
            android:id="@+id/save" />

    </LinearLayout>

</LinearLayout>
