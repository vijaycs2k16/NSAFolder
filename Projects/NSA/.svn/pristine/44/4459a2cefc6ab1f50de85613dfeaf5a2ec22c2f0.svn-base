<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardElevation3"
    android:elevation="@dimen/elevation3"
    android:layout_marginBottom="@dimen/margin5"
    app:cardBackgroundColor="@color/layoutBackground"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height80"
        android:id="@+id/audio_layout">

        <ImageView
            android:layout_width="@dimen/width70"
            android:layout_height="match_parent"
            app:srcCompat ="@drawable/ic_headphones"
            android:padding="@dimen/padding12"
            android:background="@color/appColor"
            android:id="@+id/headphone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/headphone"
            android:orientation="vertical"
            android:weightSum="4"
            android:background="@color/colorWhite"
            android:paddingLeft="@dimen/padding10"
            android:paddingRight="@dimen/padding10">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/description_text_size"
                    android:textColor="@color/descriptionTextColor"
                    android:text="0.20"
                    android:gravity="end"
                    android:layout_marginRight="@dimen/margin10"
                    android:id="@+id/date"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/close"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/date"
                    android:src="@drawable/ic_close_light"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:text="voice"
                android:id="@+id/title"/>
            <TextView
                android:minWidth="@dimen/width100"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/description_text_size"
                android:textColor="@color/descriptionTextColor"
                android:text="PUBLISHED BY"
                android:layout_gravity="end"
                android:gravity="center" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/description_text_size"
                    android:textColor="@color/colorWhite"
                    android:text="Admin"
                    android:gravity="start"
                    android:visibility="visible"
                    android:paddingLeft="@dimen/padding5"
                    android:paddingRight="@dimen/padding5"
                    android:layout_gravity="start"
                    android:layout_marginBottom="@dimen/margin3"
                    android:id="@+id/status"/>

                <TextView
                    android:minWidth="@dimen/width100"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/description_text_size"
                    android:textColor="@color/descriptionTextColor"
                    android:text="Admin"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:id="@+id/published_by"/>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>