<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin10"
    tools:context="nexrise.publication.in.nexrise.TimetableFeature.TomorrowTimeTableFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textSize="@dimen/headings"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:id="@+id/tomDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Tommorow"/>

    <include layout="@layout/progress_bar"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_table_style"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:minHeight="@dimen/minHeight50"
            >

            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="TIME"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:gravity="center"/>

            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SUBJECT"/>

            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="CLASS"/>
        </TableRow>

        <ListView
            android:id="@+id/teacher_listview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            >
        </ListView>
    </TableLayout>

</LinearLayout>
