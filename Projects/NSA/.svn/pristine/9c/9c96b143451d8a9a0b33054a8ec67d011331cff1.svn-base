<div id="addLeaveType" class="overlay-popup footer-popup" style="">
    <!-- RIGHT PANEL STARTS -->
    <div class="cd-panel">
        <div class="cd-panel-header">
            <!-- <div class="hidden-xs simple-field-hf"></div> -->
            <div class="simple-field-hf">
            </div>
            <a (click)="closeOModal()" class="cd-panel-close">Close</a>
        </div>
        <div class="cd-panel-container">
            <div class="cd-panel-content" id="side-panel-container">
                <form action="#" class="form-horizontal" [formGroup]="leaveTypeForm">
                    <div class="modal-body">
                        <div class="form-group">
                            <label class="control-label col-md-4">Type Name <span class="text-danger">*</span></label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" placeholder="Enter Leave Type" formControlName="leave_type_name">
                                <div control-messages class="validation-error-label" [control]="leaveTypeForm.controls.leave_type_name"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">Description
                            </label>
                            <div class="col-md-8">
                                <textarea rows="2" cols="5" class="form-control" placeholder="" formControlName="description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-4">No of Days <span class="text-danger">*</span>
                            </label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" placeholder="Enter Total No of Days" formControlName="days">
                                <div control-messages class="validation-error-label" [control]="leaveTypeForm.controls.days"></div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="overlay-footer">
                    <div class="right-align overlay-footer-content-rt">
                        <button type="button" class="btn btn-sm btn-default" (click)="closeOModal()">Close</button>
                        <button type="submit" class="btn btn-primary btn-ladda btn-ladda-progres" data-style="expand-right" data-spinner-size="20" [disabled]="!leaveTypeForm.valid"  id="save" (click)="saveLeaveType('saveLeaveType', 'save')" >{{buttonVal}}</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- cd-panel-container -->
    </div>
</div>
