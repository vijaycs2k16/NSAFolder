<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/layoutBackground"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/cardElevation1"
    android:layout_marginBottom="@dimen/margin5">

    <LinearLayout
        android:id="@+id/myclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/width3"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@color/svgLayoutIconColor" />

        <LinearLayout
            android:layout_width="0dp"
            android:minHeight="@dimen/height50"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_weight="1"
                    android:text="Exam name"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/common_text_size"
                    android:paddingLeft="@dimen/padding10"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:minHeight="@dimen/height25"
                    android:text=" : "
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/common_text_size"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/common_text_size"
                    android:textStyle="bold"
                    android:id="@+id/exam_name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Published date "
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/padding10"
                    android:textSize="@dimen/common_text_size"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:minHeight="@dimen/height25"
                    android:text=" : "
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/common_text_size"
                    android:paddingLeft="@dimen/padding10"
                    android:paddingRight="@dimen/padding10"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/common_text_size"
                    android:textStyle="bold"
                    android:id="@+id/exam_date"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/classtime"
            app:srcCompat="@drawable/ic_arrow_right" />
    </LinearLayout>

</android.support.v7.widget.CardView>