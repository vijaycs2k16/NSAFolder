<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_attendence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nexrise.publication.in.nexrise.Attendence.AttendenceActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/overlayForegroundColor"
        android:weightSum="2">
        <TextView
            android:text="attendance"
            android:layout_width="0dp"
            android:layout_height="@dimen/height50"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding12"
            android:textAllCaps="true"
            android:id="@+id/study_value"
            android:paddingTop="@dimen/padding5"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:background="@color/overlayForegroundColor"
            android:paddingBottom="@dimen/padding5"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_help"
            android:layout_width="0dp"
            android:id="@+id/help"
            android:layout_height="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/classtime"
            android:layout_width="0dp"
            android:layout_height="@dimen/height50"
            android:textStyle="bold"
            android:layout_weight="2.0"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:text="10th October 2016"
            android:textSize="@dimen/headings" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:background="@color/overlayForegroundColor"/>

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:paddingLeft="@dimen/padding15"
        android:gravity="center_vertical"
        android:text="Record Class Attendence"
        android:textSize="@dimen/common_text_size" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:orientation="horizontal"
        android:weightSum="3">

        <Spinner
            android:id="@+id/classspin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_weight="1"
            android:background="@drawable/spinner"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:spinnerMode="dropdown" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="@dimen/padding5"
            android:layout_marginLeft="@dimen/margin15"
            android:id="@+id/sectionspin"
            android:background="@drawable/spinner"
            android:layout_weight="1">

        </Spinner>

        <Button
            android:text="submit"
            android:layout_width= "0dp"
            style="@style/RoundedCornerButton"
            android:layout_height="@dimen/height35"
            android:id="@+id/attendance_submit_button"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin20"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:background="@color/overlayForegroundColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myleave_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leaves"
            android:layout_width="0dp"
            android:layout_height="@dimen/height50"
            android:paddingLeft="@dimen/padding15"
            android:textStyle="bold"
            android:layout_weight="2.0"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="My Leaves"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"
            android:layout_width="0dp"
            android:layout_margin="@dimen/margin5"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:background="@color/overlayForegroundColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/approval_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/leave_approval"
            android:layout_width="0dp"
            android:layout_height="@dimen/height50"
            android:paddingLeft="@dimen/padding15"
            android:textStyle="bold"
            android:layout_weight="2.0"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:text="Leave Approval"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"
            android:layout_width="0dp"
            android:layout_margin="@dimen/margin5"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height1"
        android:background="@color/overlayForegroundColor"/>

</LinearLayout>
