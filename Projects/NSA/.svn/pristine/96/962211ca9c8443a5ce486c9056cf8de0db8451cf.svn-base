<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:paddingLeft="@dimen/padding10"
                android:inputType="textPersonName"
                android:hint="Create Title *"
                android:textColorHint="@color/colorGray"
                android:gravity="center_vertical"
                android:textSize="@dimen/common_text_size"
                android:layout_marginTop="@dimen/margin10"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin10"
                android:background="@drawable/curveborder"
                android:textColor="@color/colorBlack"
                android:id="@+id/create_title" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height50"
                android:text="Mobile Number"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:paddingLeft="@dimen/padding15"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/height30"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:id="@+id/mobilenumber"
                android:layout_marginRight="@dimen/margin10"
                android:background="@drawable/edit_text_border"
                android:textColor="@color/colorBlack"
                android:inputType="number|text"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/taxonomy">

            <TextView
                android:id="@+id/message_to"
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:padding="@dimen/padding15"
                android:text="Message To"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/common_text_size" />

            <TextView
                android:id="@+id/selection_indication"
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:layout_weight="0.87"
                android:gravity="center_vertical"
                android:padding="@dimen/padding15"
                android:text="Not selected"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/common_text_size" />

            <ImageView
                android:layout_weight="0.23"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_arrow_right"
                android:layout_toRightOf="@+id/message_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView17" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Templates"
                android:id="@+id/categoriestext"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/padding15"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin10"
                android:id="@+id/categoriesspin"
                android:background="@drawable/spinner"
                android:layout_weight="1">


            </Spinner>
        </LinearLayout>

        <TextView
            android:padding="@dimen/padding15"
            android:id="@+id/message"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:textSize="@dimen/common_text_size"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height100"
            android:inputType="textPersonName|textMultiLine"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:hint="Type Here"
            android:padding="@dimen/padding10"
            android:gravity="left"
            android:textSize="@dimen/common_text_size"
            android:maxLines="5"
            android:background="@drawable/curveborder"
            android:id="@+id/description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/overlayForegroundColor">
                <include layout="@layout/add_homework_listview_footer"
                    android:visibility="gone"
                    android:id="@+id/channel"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Priority :"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:padding="@dimen/padding15"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/priority"
                android:layout_marginTop="@dimen/margin10"
                android:layout_weight="3">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:id="@+id/radio1"
                    android:checked="true"
                    android:textSize="@dimen/common_text_size"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:id="@+id/radio2"
                    android:textSize="@dimen/common_text_size"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Low"
                    android:id="@+id/radio3"
                    android:textSize="@dimen/common_text_size"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:layout_gravity="center"
            android:layout_width="@dimen/width220"
            android:layout_height="wrap_content"
            android:text="Save as Draft"
            style="@style/RoundedCornerButton"
            android:id="@+id/draftbutton"
            android:elevation="@dimen/cardElevation3"
            android:padding="@dimen/padding10"
            android:textSize="@dimen/common_text_size"/>
    </LinearLayout>
</ScrollView>