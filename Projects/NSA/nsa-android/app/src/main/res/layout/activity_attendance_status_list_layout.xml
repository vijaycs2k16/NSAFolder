<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height40">

        <TableRow
            android:minHeight="@dimen/minHeight50"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height30">
        <TextView
            android:background="@drawable/border_style"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:layout_width="@dimen/width20"
            android:gravity="center"
            android:id="@+id/attendance_no"
            android:textSize="@dimen/common_text_size"
            />
        <TextView
            android:background="@drawable/border_style"
            android:layout_width="@dimen/width100"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="1"
            android:id="@+id/absent_month"
            android:textSize="@dimen/common_text_size"
            />
        <TextView
            android:background="@drawable/border_style"
            android:layout_width="@dimen/width100"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="1"
            android:id="@+id/absent_day"
            android:textSize="@dimen/common_text_size"
            />
        </TableRow>
</TableLayout>

    </LinearLayout>

</LinearLayout>