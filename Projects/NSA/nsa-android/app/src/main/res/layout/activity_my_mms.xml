<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/overlayColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/overlayForegroundColor"
            android:id="@+id/notification_details"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_transparent"
                android:visibility="gone"
                android:id="@+id/headingblack">
            </RelativeLayout>
            <TextView
                android:text="received notification"
                android:layout_width="0dp"
                android:layout_height="@dimen/height50"
                android:textColor="@color/colorBlack"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding12"
                android:textAllCaps="true"
                android:id="@+id/study_value"
                android:paddingTop="@dimen/margin5"
                android:textStyle="bold"
                android:layout_weight="1.5"
                android:paddingBottom="@dimen/margin5"
                android:textSize="@dimen/common_text_size" />
            <ImageView
                android:layout_weight="0.5"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_help"
                android:layout_width="0dp"
                android:id="@+id/help"
                android:layout_height="@dimen/height20" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/appColor"
                android:visibility="gone"
                android:id="@+id/notification_loading" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothing to show"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorThinGrey"
                android:textSize="@dimen/description_text_size"
                android:visibility="gone"
                android:id="@+id/no_content"
                android:layout_gravity="center" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent"
                android:background="@color/overlayForegroundColor"
                android:paddingLeft="@dimen/padding5"
                android:id="@+id/notify"
                android:paddingRight="@dimen/padding5"
                android:paddingBottom="@dimen/padding3"/>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
