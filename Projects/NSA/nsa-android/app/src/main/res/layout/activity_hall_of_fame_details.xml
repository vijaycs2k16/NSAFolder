<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hall_of_fame_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nexrise.publication.in.nexrise.HallOfFame.HallOfFameDetailsActivity">
    <include layout="@layout/progress_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding10"
        android:paddingRight="@dimen/padding10"
        android:paddingBottom="@dimen/padding10"
        android:paddingTop="@dimen/padding10"
        android:background="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:minHeight="@dimen/height30">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/common_text_size"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/height10"
                        android:text="@string/award_name"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/common_text_size"
                        android:id="@+id/award_name"
                        android:text="Award Name"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="30dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:textSize="@dimen/common_text_size"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/height10"
                        android:text="@string/date"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:textSize="@dimen/common_text_size"
                        android:id="@+id/date_of_issue"
                        android:text="Date"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="@dimen/height30"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:textSize="@dimen/common_text_size"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/height10"
                        android:text="@string/category"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:text=":"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="description"
                        android:textSize="@dimen/common_text_size"
                        android:gravity="center_vertical"
                        android:layout_weight="0.9"
                        android:id="@+id/descrip"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding10"
            android:paddingTop="@dimen/padding10"
            android:paddingBottom="@dimen/padding10"
            android:weightSum="1">
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/search"
                android:paddingLeft="@dimen/padding5"
                android:id="@+id/text"
                android:textColorHint="@color/colorGray"
                android:background="@drawable/curveborder"
                android:drawableRight="@android:drawable/ic_menu_search"/>

        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/award_student_list"
            android:background="@color/colorWhite">
        </ListView>
    </LinearLayout>
</RelativeLayout>
