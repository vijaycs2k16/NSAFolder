<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/overlayForegroundColor"
    tools:context="nexrise.publication.in.nexrise.ProgressReportFeature.ProgressResultsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:layout_marginLeft="@dimen/margin5"

        android:paddingBottom="@dimen/margin3"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginTop="@dimen/margin3">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/height50"
            android:id="@+id/classSpinner"
            android:layout_marginRight="@dimen/margin5"
            android:textSize="@dimen/common_text_size"
            android:background="@drawable/spinner"
            android:layout_weight="1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/height50"
            android:id="@+id/sectionSpinner"
            android:layout_marginLeft="@dimen/margin5"
            android:textSize="@dimen/common_text_size"
            android:background="@drawable/spinner"
            android:layout_weight="1" />
    </LinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:layout_marginLeft="@dimen/margin5"
        android:background="@drawable/spinner"
        android:layout_marginRight="@dimen/margin5"
        android:textSize="@dimen/common_text_size"
        android:layout_marginTop="@dimen/margin5"
        android:id="@+id/spinner5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/colorWhite">

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding10"
            android:textColor="@color/descriptionTextColor"
            android:background="@color/colorWhite"
            android:textSize="@dimen/description_text_size"
            android:id="@+id/textView20" />
        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding10"
            android:textColor="@color/descriptionTextColor"
            android:background="@color/colorWhite"
            android:textSize="@dimen/description_text_size"
            android:id="@+id/duration" />
    </LinearLayout>

    <TextView
        android:text="Grade statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView21"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding10"
        android:paddingTop="@dimen/padding15"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginBottom="@dimen/margin3"
        android:paddingBottom="@dimen/padding10"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:background="@color/colorWhite"
        android:textSize="@dimen/description_text_size"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:padding="@dimen/margin10"
        android:layout_marginTop="@dimen/margin3"
        android:stretchColumns="*"
        android:id="@+id/progress_result_table_layout"
        android:background="@color/colorWhite">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="A1"
                android:background="@color/green"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:gravity="center"

                android:textColor="@color/colorWhite"/>

            <TextView
                android:text="15"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:gravity="center"
                android:id="@+id/textView24"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@drawable/one_sided_border_without_padding"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:text="A2"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:id="@+id/textView25"
                android:gravity="center"
                android:background="@color/green"
                android:layout_marginLeft="@dimen/margin10"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:text="10"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:id="@+id/textView26"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@drawable/one_sided_border_without_padding"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:text="B1"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:gravity="center"
                android:id="@+id/textView27"
                android:background="@color/yellow"
                android:layout_marginLeft="@dimen/margin10"
                android:textColor="@color/colorWhite"/>

            <TextView
                android:text="15"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin10"
                android:background="@drawable/one_sided_border_without_padding"
                android:textColor="@color/colorBlack"
                android:id="@+id/textView28" />

            <TextView
                android:text="B2"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin10"
                android:textColor="@color/colorWhite"
                android:background="@color/yellow"
                android:id="@+id/textView29" />

            <TextView
                android:text="20"
                android:layout_width="@dimen/width25"
                android:layout_height="@dimen/height20"
                android:id="@+id/textView30"
                android:textColor="@color/colorBlack"
                android:layout_marginLeft="@dimen/margin10"
                android:gravity="center"
                android:background="@drawable/one_sided_border_without_padding"/>
        </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/margin10">

        <TextView
            android:text="C1"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:gravity="center"
            android:background="@color/yellow"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView31" />

        <TextView
            android:text="5"
            android:textColor="@color/colorBlack"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center"
            android:background="@drawable/one_sided_border_without_padding"
            android:id="@+id/textView33" />

        <TextView
            android:text="C2"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:gravity="center"
            android:background="@color/yellow"
            android:layout_marginLeft="@dimen/margin10"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView34" />

        <TextView
            android:text="7"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center"
            android:background="@drawable/one_sided_border_without_padding"
            android:textColor="@color/colorBlack"
            android:id="@+id/textView35" />

        <TextView
            android:text="D"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin10"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView37" />

        <TextView
            android:text="10"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center"
            android:background="@drawable/one_sided_border_without_padding"
            android:textColor="@color/colorBlack"
            android:id="@+id/textView38" />

        <TextView
            android:text="E"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:gravity="center"
            android:background="@color/colorRed"
            android:layout_marginLeft="@dimen/margin10"
            android:textColor="@color/colorWhite"
            android:id="@+id/textView40" />

        <TextView
            android:text="6"
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/height20"
            android:layout_marginLeft="@dimen/margin10"
            android:gravity="center"
            android:background="@drawable/one_sided_border_without_padding"
            android:textColor="@color/colorBlack"
            android:id="@+id/textView41"
            />
    </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:layout_margin="@dimen/margin5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:weightSum="1">
        <EditText
            android:layout_width="@dimen/width150"
            android:layout_height="@dimen/height40"
            android:hint="Abinaya"
            android:background="@color/transparent"
            android:padding="@dimen/margin10"
            android:gravity="center_vertical"
            android:textSize="@dimen/common_text_size"
            android:layout_marginRight="@dimen/margin10"
            android:layout_weight="0.41" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin10"
            android:scaleType="fitEnd"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_search"
            android:layout_weight="0.6"/>
    </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/padding5"
        android:paddingRight="@dimen/padding5"
        android:paddingTop="@dimen/padding5"
        android:paddingBottom="@dimen/padding3"
        android:id="@+id/progress_result_listview"
        android:background="@color/overlayForegroundColor"/>

</LinearLayout>