<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear"

    tools:context="nexrise.publication.in.nexrise.TimetableFeature.WeeklyTimeTableFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACADEMIC YEAR (2017-2018)"
        android:id="@+id/week_heading"
        android:gravity="center"
        android:visibility="visible"
        android:layout_marginTop="@dimen/margin10"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/colorBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height50"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin10"
        android:layout_marginBottom="@dimen/margin10"
        android:id="@+id/teacher_timetable"
        android:background="@color/colorWhite"
        android:visibility="visible">

        <include layout="@layout/progress_bar"
            android:visibility="gone"
            android:id="@+id/teacher_list_loading"/>
        <Spinner
            android:id="@+id/teachers_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginTop="@dimen/margin5"
            android:layout_marginBottom="@dimen/margin5"
            android:background="@drawable/spinner"
            android:gravity="center">

        </Spinner>

    </LinearLayout>
    <include layout="@layout/progress_bar"
        android:visibility="gone"
        android:id="@+id/progress_bar"/>
    <!-- TODO: Update blank fragment layout -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding10"
        android:weightSum="7"
        android:visibility="gone"
        android:id="@+id/week_timetable_layout"
        android:background="@drawable/border_table_style">

        <TableRow
            android:minHeight="@dimen/minHeight30"
            android:layout_height="match_parent"
            android:layout_width="match_parent">
            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="@dimen/width120"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TIME" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="MON" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="TUE" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="WED" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="THU" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="FRI" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="SAT" />
        </TableRow>

        <ListView
            android:id="@+id/tableListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border"/>


    </TableLayout>

</LinearLayout>
