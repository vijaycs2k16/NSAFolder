<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_student_details2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nexrise.publication.in.nexrise.ProgressReportFeature.ParentStudentLogin.StudentDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/overlayForegroundColor"
        android:weightSum="2">
        <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="@dimen/height50"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding12"
            android:textAllCaps="true"
            android:id="@+id/progress_report_name"
            android:paddingTop="@dimen/margin5"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:background="@color/overlayForegroundColor"
            android:paddingBottom="@dimen/margin5"
            android:textSize="@dimen/common_text_size" />
        <ImageView
            android:layout_weight="0.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_help"
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_height="@dimen/height20" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:text="TextView"
        android:layout_width="0dp"
        android:layout_height="@dimen/height50"
        android:gravity="center_vertical"
        android:textSize="@dimen/common_text_size"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/padding15"
        android:id="@+id/textView42"
        android:layout_weight="1" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="@dimen/height35"
        android:id="@+id/spinner"
        android:layout_gravity="center"
        android:background="@drawable/spinner"
        android:textSize="@dimen/common_text_size"
        android:textColor="@color/colorBlack"
        android:layout_weight="1.5" />

    <ImageButton
        android:layout_width="@dimen/height40"
        android:layout_height="@dimen/height35"
        app:srcCompat="@drawable/ic_table_grid"
        android:background="#d7d3d3"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:layout_gravity="center"
        android:tint="@color/colorWhite"
        android:id="@+id/table_view"
        />

    <ImageButton
        android:layout_width="@dimen/height40"
        android:layout_height="@dimen/height35"
        app:srcCompat="@drawable/ic_progress_card"
        android:background="#d7d3d3"
        android:tint="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin5"
        android:id="@+id/graph_view" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin10"
        android:id="@+id/student_details_frame"/>
</LinearLayout>
