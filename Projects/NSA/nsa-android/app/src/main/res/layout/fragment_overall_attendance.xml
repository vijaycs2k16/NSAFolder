<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_overall_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="nexrise.publication.in.nexrise.Attendence.OverallAttendanceActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/margin15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/fromclick">
        <TextView
            android:layout_width="@dimen/width116"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:id="@+id/fromtext"
            android:layout_weight="1"
            android:textSize="@dimen/common_text_size"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/padding15"/>
        <TextView
            android:text="hai"
            android:layout_width="@dimen/width50"
            android:layout_height="@dimen/height30"
            android:gravity="center_vertical|left"
            android:background="@drawable/border"
            android:id="@+id/fromdatetext"
            android:paddingLeft="@dimen/padding5"
            android:textSize="@dimen/description_text_size"
            android:textColor="@color/colorGray"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="@dimen/width45"
            android:layout_height="@dimen/height45"
            android:id="@+id/fromdatebutton"
            android:background="@color/overlayColor"
            app:srcCompat="@drawable/ic_events"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@+id/toclick">
        <TextView
            android:layout_width="@dimen/width116"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:id="@+id/todate"
            android:layout_weight="1"
            android:textSize="@dimen/common_text_size"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/padding15"/>
        <TextView
            android:layout_width="@dimen/width50"
            android:layout_height="@dimen/height30"
            android:background="@drawable/border"
            android:gravity="center_vertical|left"
            android:id="@+id/todatetext"
            android:text="hai"
            android:paddingLeft="@dimen/padding5"
            android:textSize="@dimen/description_text_size"
            android:textColor="@color/colorGray"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="@dimen/width45"
            android:layout_height="@dimen/height45"
            android:background="@color/colorWhite"
            app:srcCompat="@drawable/ic_events"
            android:id="@+id/todatebutton"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:text="submit"
        android:layout_width= "wrap_content"
        android:layout_height="@dimen/height35"
        android:id="@+id/attendance_submit_button"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin10"
        android:gravity="center"
        style="@style/RoundedCornerButton"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/percentlayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/present_layout"
            android:layout_margin="@dimen/margin10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:id="@+id/student_present_persent"
                android:text="Students Present Percentage"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/students_present"
                android:textSize="@dimen/common_text_size"
                android:text="56"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height1"
            android:background="@color/overlayForegroundColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/absent_layout"
            android:padding="@dimen/padding10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:textSize="@dimen/common_text_size"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:id="@+id/student_absent_persent"
                android:text="Students Absent Percentage"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:id="@+id/students_absent"
                android:textSize="@dimen/common_text_size"
                android:text="10"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
