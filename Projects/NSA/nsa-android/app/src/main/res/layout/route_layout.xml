<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/layoutBackground"
    app:cardElevation="@dimen/cardElevation1"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/width3"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/svgLayoutIconColor"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:minHeight="@dimen/height50"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_weight="0.9"
                    android:text="@string/route_name_"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/title_text_size"
                    android:paddingLeft="@dimen/padding10"
                    android:id="@+id/route_name_key"/>
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/title_text_size"
                    android:paddingLeft="@dimen/padding10"
                    android:id="@+id/route_name"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="@string/vehicle_no_"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding10"
                    android:textSize="@dimen/title_text_size"
                    android:id="@+id/vehicle_number_key"/>
                <TextView
                    android:layout_width="0dp"
                    android:minHeight="@dimen/height25"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding10"
                    android:textSize="@dimen/title_text_size"
                    android:id="@+id/vehicle_number"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_arrow_right"/>
    </LinearLayout>
</android.support.v7.widget.CardView>