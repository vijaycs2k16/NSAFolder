<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:gravity="center">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/details_left_textview"
        android:textColor="@color/colorBlack"
        android:paddingLeft="@dimen/padding10"
        android:paddingStart="@dimen/padding10"
        android:gravity="center_vertical"
        android:textSize="@dimen/common_text_size"
        android:layout_weight="1"
        android:minHeight="@dimen/height40"
        android:text=""/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding10"
        android:paddingStart="@dimen/padding10"
        android:textSize="@dimen/common_text_size"
        android:id="@+id/details_right_textview"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:minHeight="@dimen/height50"
        android:paddingTop="@dimen/height10"
        android:paddingBottom="@dimen/height10"
        android:text=""/>
</LinearLayout>