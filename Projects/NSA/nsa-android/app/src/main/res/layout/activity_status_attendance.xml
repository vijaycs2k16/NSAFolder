<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_overall_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nexrise.publication.in.nexrise.ParentFeatures.Attendance.StatusAttendanceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height40"
        android:textSize="@dimen/common_text_size"
        android:textColor="@color/colorBlack"
        android:padding="@dimen/padding10"
        android:background="@color/colorWhite"
        android:textStyle="bold"
        android:text=" "
        android:id="@+id/student_name"/>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin10"
        android:padding="@dimen/padding10"
        android:weightSum="3"
        android:id="@+id/week_timetable_layout"
        android:background="@drawable/border_table_style"
        >
        <include layout="@layout/progress_bar"
            android:visibility="gone"
            android:id="@+id/progress_bar"/>

        <TableRow
            android:minHeight="@dimen/minHeight30"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
            <TextView
                android:background="@drawable/border_overlay"
                android:layout_width="@dimen/width20"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/s_no" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="@string/date_caps" />
            <TextView
                android:background="@drawable/border_overlay"
                android:gravity="center"
                android:layout_width="@dimen/width100"
                android:layout_height="match_parent"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_weight="1"
                android:text="@string/day_caps" />
        </TableRow>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/absent_list">

        </ListView>


    </TableLayout>

</LinearLayout>
