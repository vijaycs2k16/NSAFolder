<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/cardElevation3"
    android:elevation="@dimen/elevation3"
    android:layout_marginBottom="@dimen/margin5"
    app:cardBackgroundColor="@color/layoutBackground"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height40">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="@dimen/width3"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/svgLayoutIconColor"
                />

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3.3">
                <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="0dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/title_text_size"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="bfhdafvb"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:textSize="@dimen/description_text_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2016-05-11"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="0dp"
                    android:textSize="@dimen/description_text_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.68"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/margin3"
                    android:text="23:00:00"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="top"
                    android:layout_marginRight="@dimen/margin5"
                    android:id="@+id/close"
                    android:visibility="gone"
                    android:src="@drawable/ic_close_light"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin5"
                android:layout_marginBottom="@dimen/margin5"
                android:id="@+id/desc"
                android:text="bjhbhbhjb"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/eventPlace"
                        android:layout_width="match_parent"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/description_text_size"
                        android:layout_marginTop="@dimen/margin5"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="@string/published_by_"/>
                    <TextView
                        android:id="@+id/notification_published"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/common_text_size"
                        android:layout_height="wrap_content"
                        android:text="bfhdafvb"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:id="@+id/attachments_indication"
                    android:gravity="bottom">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clip"
                        android:id="@+id/attachment_clip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin5"
                        android:textSize="@dimen/small_text_size"
                        android:layout_toRightOf="@id/attachment_clip"
                        android:paddingLeft="@dimen/padding5"
                        android:paddingRight="@dimen/padding5"
                        android:id="@+id/attachment_count"
                        android:text="attachments(s)"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/notification_status"
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/padding5"
                    android:paddingBottom="@dimen/padding5"
                    android:textSize="@dimen/common_text_size"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorRed"
                    android:text="Emergency" />

            </LinearLayout>

        </LinearLayout>
   </LinearLayout>
</android.support.v7.widget.CardView>