<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/height50"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin5"
        android:minHeight="@dimen/height50">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/width3"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:id="@+id/card_color"
                android:background="@color/svgLayoutIconColor"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height50"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height50"
                android:id="@+id/events_feature_linear"
                android:background="@color/layoutBackground"
                android:weightSum="2">

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height50"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/padding15"
                    android:id="@+id/title"
                    android:textStyle="bold"
                    android:textSize="@dimen/title_text_size"
                    android:layout_weight="0.9" />

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height50"
                    android:gravity="end|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/date"
                    android:paddingTop="@dimen/padding5"
                    android:textSize="@dimen/description_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:paddingBottom="@dimen/padding5"
                    android:paddingRight="@dimen/padding15"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin5"
                    android:layout_marginRight="@dimen/margin5"
                    app:srcCompat="@drawable/ic_arrow_right"
                    android:layout_gravity="center"
                    android:id="@+id/right_arrow"
                    android:visibility="invisible"
                    android:layout_weight="0.1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>